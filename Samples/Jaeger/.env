# Jaeger Environment Configuration
# Customize these values as needed

# Jaeger All-in-One Configuration
JAEGER_VERSION=1.50
JAEGER_LOG_LEVEL=info

# Storage Configuration (for All-in-One)
# Options: memory, badger
SPAN_STORAGE_TYPE=memory

# Elasticsearch Configuration (for Production)
ELASTICSEARCH_VERSION=8.10.4
ES_JAVA_OPTS=-Xms512m -Xmx512m

# Network Configuration
JAEGER_NETWORK=jaeger-network

# Volume Configuration
ELASTICSEARCH_DATA_VOLUME=elasticsearch-data
JAEGER_BADGER_DATA_VOLUME=jaeger-badger-data
JAEGER_BADGER_KEY_VOLUME=jaeger-badger-key

# Application Configuration (for demos)
JAEGER_SAMPLER_TYPE=const
JAEGER_SAMPLER_PARAM=1

# OTLP Configuration
COLLECTOR_OTLP_ENABLED=true

# Performance Settings
COLLECTOR_QUEUE_SIZE=2000
COLLECTOR_NUM_WORKERS=50